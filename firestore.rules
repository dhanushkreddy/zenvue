rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Secure the early access list.
    // - Deny all reads by default to prevent email scraping.
    // - Allow anyone to create a new document (sign up).
    match /earlyAccessUsers/{docId} {
      allow read: if false; // Deny reads to protect email privacy.
      allow create: if request.resource.data.email is string && request.resource.data.signedUpAt == request.time;
      allow update, delete: if false; // Prevent tampering.
    }

    // Users can only read and write to their own data. This is secure.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
